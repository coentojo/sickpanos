<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
  <%= f.label "email: "%><br/>
  <%= f.text_field(:email) %> <br/>
  <%= f.label "username: "%><br/>
  <%= f.text_field(:username) %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

